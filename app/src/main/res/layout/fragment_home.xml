<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/top_view"
        layout="@layout/top_view" />


  <!--  <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >-->


    <RelativeLayout
        android:paddingLeft="5dp"

        android:id="@+id/rel_my"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingRight="16dp"
        android:background="@drawable/setting_item_selector_withe"
        >

        <ImageView
            android:layout_marginLeft="5dp"

            android:layout_centerVertical="true"
            android:id="@+id/iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/no_avatar" />
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/iv_avatar"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/nickname"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="@string/set_unlogin"
                android:textColor="@color/them_text"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/phone"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/them_text"
                android:textSize="13sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/image_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_next"/>

        <ImageView
            android:src="@drawable/two_code"
            android:id="@+id/text_tem"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/image_right"
            android:gravity="right"

            />


    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="5dp"
        android:background="@drawable/setting_item_selector_withe"
        android:id="@+id/rel_temp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:paddingRight="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="@string/temp_home"
            android:textColor="@color/them_text"
            android:textSize="17sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_next"/>

    </RelativeLayout>

</LinearLayout>