<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical" >

    <FrameLayout
        android:background="@color/them_bg"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
         >

        <TextView
            android:id="@+id/top_view_left_text"
            android:background="@drawable/green_select"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/top_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/top_view_right_image"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:background="@drawable/img_select"
            android:padding="12dp"

            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:background="@drawable/green_select"
            android:padding="10dp"

            android:visibility="gone" />

        <TextView
            android:id="@+id/top_view_right_text"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/green_select"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:visibility="gone" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.4dp"
            android:layout_gravity="bottom"
            android:background="@color/them_text" />

        <ImageView
            android:id="@+id/top_view_back"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:background="@drawable/green_select"
            android:padding="10dp"
            android:src="@drawable/back" />
    </FrameLayout>

</LinearLayout>